{% assign greenhousePostings = Model.ContentItem.Content.GreenhousePostings %}

{% assign pageSize = "12" %}

{% assign pinnedPostingIds = greenhousePostings.PinnedPostings.ContentItemIds %}
{% assign pinnedPostings = pinnedPostingIds | content_item_id %}

{% if greenhousePostings.PageSize.Value != nil %}
    {% assign pageSize = greenhousePostings.PageSize.Value %}
{% endif %}

{% assign query = greenhousePostings.Source.Value %}
{% assign paging = greenhousePostings.Paging.Value %}

{% assign allPostings = Queries.AllGreenhousePostings | query %}

{% assign location = Request.Query.location | first %}
{% assign department = Request.Query.department | first %}

{% assign page = Request.Query["page"] | first | at_least: 1 %}
{% assign fromValue = page | times: pageSize | minus: pageSize  | at_least: 0 %}

{% assign showPinned = location == nil and department == nil and page == 1 %}

{% if showPinned %}
    {% assign pageSize = pageSize - pinnedPostings.size  %}
{% else %}
    {% assign fromValue = fromValue - pinnedPostings.size %}
{% endif %}

{% assign totalItems = Queries[query] | query: size: 10000, department: department, location: location %}

{% assign fetchCount = pageSize | plus: 1 %}

{% if pageSize > 0 %}
    {% assign items = Queries[query] | query: size: fetchCount, from: fromValue, department: department, location: location, excludedIds: pinnedPostingIds %}
{% endif %}

{% assign pageUrl = Request.PathBase | append: Request.Path %}
{% assign pageUrl = pageUrl | append: "?" %}

{% if department != null %}
    {% assign pageUrl = pageUrl | append: "department=" + department + "&" %}
{% endif %}

{% if location != null %}
    {% assign pageUrl = pageUrl | append: "location=" + location + "&" %}
{% endif %}

{% assign hideDepartment = greenhousePostings.HideDepartmentFilter.Value %}
{% assign hideLocation = greenhousePostings.HideLocationFilter.Value %}
{% assign hideResultsSummary = greenhousePostings.HideResultsSummary.Value %}

{% assign departmentLabel = greenhousePostings.DepartmentLabel.Text %}
{% assign locationLabel = greenhousePostings.LocationLabel.Text %}
{% assign submitLabel = greenhousePostings.SubmitLabel.Text %}
{% assign nextPageLabel = greenhousePostings.NextPageLabel.Text %}
{% assign previousPageLabel = greenhousePostings.PreviousPageLabel.Text %}

{% assign cssClasses = "content-feed js-analytics-list" %}

{% assign styles = "" %}

<div id="postings" class="{{ cssClasses }}" style="{{ styles }}" data-list="{{ Model.ContentItem | displayText }}">
    {% if hideHeader == false %}
        <header class="content-feed__header">
            <h2 class="content-feed__title">{{ Model.ContentItem | displayText }}</h2>
        </header>
    {% endif %}

    {% if hideDepartment == false or hideLocation == false %}
    <form method="get" action="#postings" class="content-feed__filters">
        {% if hideLocation == false %}
        <div class="content-feed__filter">
            <label for="location">
                {% if locationLabel != nil %}
                    {{ locationLabel }}
                {% else %}
                    {{ "Location" | t }}
                {% endif %}
            </label>

            <select id="location" name="location">
                {{ allPostings | greenhouse_location_options | raw }}
            </select>
        </div>
        {% endif %}

        {% if hideDepartment == false %}
            <div class="content-feed__filter">
                <label for="department">
                    {% if departmentLabel != nil %}
                        {{ departmentLabel }}
                    {% else %}
                        {{ "Department" | t }}
                    {% endif %}
                </label>
                <select id="department" name="department">
                    {{ allPostings | greenhouse_department_options | raw }}
                </select>
            </div>
        {% endif %}

        <div class="content-feed__filter js-job-filter-button">
            <button type="submit" class="btn btn--primary">
                {% if submitLabel != nil %}
                    {{ submitLabel }}
                {% else %}
                    {{ "Update" | t }}
                {% endif %}
            </button>
        </div>
    </form>
    {% endif %}

    {% if hideResultsSummary == false %}
        <div class="content-feed__summary">
            <h3>{{ totalItems | size }} {{ "results" | t}}</h3>
        </div>
    {% endif %}

    {% if items.size > 0 or pinnedPostings.size > 0 %}
        <div class="content-feed__list content-feed__list--{{ greenhousePostings.Columns.Text }}-cols columns--{{ greenhousePostings.Columns.Text }}">
            {% if showPinned %}
                {% for item in pinnedPostings %}
                    <div class="content-feed__item">
                        {{ item | shape_build_display: "Summary" | shape_render }}
                    </div>
                {% endfor %}
            {% endif %}

            {% for item in items %}
                {% if forloop.last == false or items.size <= pageSize %}
                    <div class="content-feed__item">
                        {{ item | shape_build_display: "Summary" | shape_render }}
                    </div>
                {% endif %}
            {% endfor %}
        </div>
    {% endif %}

    {% if paging %}
        <ul class="content-feed__pager pager margin--bottom-large">
            {% if from > 0 %}
                {% assign prevPage = page | minus: 1 %}
                <li>
                    <a href="{{ pageUrl | append: "page=" | append: prevPage | append: "#postings" }}">
                    {% if previousPageLabel != nil %}
                        {{ previousPageLabel }}
                    {% else %}
                        {{ "Previous postings" | t}}
                    {% endif %}
                    </a>
                </li>
            {% endif %}

            {% if items.size > pageSize %}
                {% assign nextPage = page | plus: 1 %}
                <li>
                    <a href="{{ pageUrl | append: "page=" | append: nextPage | append: "#postings" }}">
                    {% if nextPageLabel != nil %}
                        {{ nextPageLabel }}
                    {% else %}
                        {{ "Next postings" | t}}
                    {% endif %}
                    </a>
                </li>
            {% endif %}
        </ul>
    {% endif %}
</div>
